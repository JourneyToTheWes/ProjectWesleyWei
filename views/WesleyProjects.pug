doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(http-equiv="x-ua-compatible", content="ie=edge")
        title WestWay Projects
        link(rel="shortcut icon", type="image/x-icon", href="fivestarFavicon.ico")
        link#pagestyle(rel="stylesheet", type="text/css", href="WesleyProject.css")
        // <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css", integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb", crossorigin="anonymous")
    body
        #cover-section
            #west-way-header.text-center
                h2 WestWay
                h5 Projects
                a(href="/")
                    img#logo(src="images/WestWay.JPG")
        #project-tabs.container
            .row
                each project, index in projects
                    .col
                        .project-sub-tab
                            a(href="javascript:displayProject('project" + (index + 1) + "');")
                                span.tab-text-format= project.title
        #overallProjects.container
            each project, index in projects
                .projectContainer
                    div(id="project" + (index + 1), class="hidden")
                        .row
                            // Load project info
                            ul.projectList.col-sm-4.col-md-6.col-lg-4
                                li.projectDate= project.date
                                each projectInfo in project.description
                                    li= projectInfo
                            // Load project images
                            .projectImages.col-sm-8.col-md-6.col-lg-8.text-center
                                each projectImg in project.images
                                    .slide
                                        img(src="" + projectImg)
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js")
        script(src="ProjectScript.js")